<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doro Pizza's"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="20sp"
        android:textSize="50sp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/colorAccent"
        ></TextView>
    <TextView
        android:id="@+id/heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Table"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:layout_marginBottom="20sp"
        android:textSize="40sp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/colorPrimary"
        ></TextView>

    <ImageView
        android:id="@+id/image_home"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_below="@id/heading"
        android:src="@mipmap/restaurant"
        android:layout_centerHorizontal="true"
        ></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Tables :       "
        android:id="@+id/content"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_below="@id/image_home"
        android:padding="30sp"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 "
        android:id="@+id/availableTables"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_below="@id/image_home"
        android:layout_alignRight="@id/content"
        android:padding="30sp"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        ></TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:id="@+id/inputtable"
        android:inputType="number"
        android:hint="Enter table here"
        android:layout_centerHorizontal="true"

        ></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textDirection="rtl"
        android:layout_below="@+id/inputtable"
        android:layout_centerHorizontal="true"
        android:text="Order food"
        android:background="@color/black"
        android:padding="10sp"
        android:textColor="@color/white"
        ></Button>
</RelativeLayout>
